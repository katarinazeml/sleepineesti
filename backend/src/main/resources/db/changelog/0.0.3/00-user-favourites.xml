<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20" author="vadim">

        <!-- Create Booking table -->

        <createTable tableName="user_favourites">

            <column name="user_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="housing_id" type="bigint">
                <constraints nullable="false" />
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="user_favourites"
                baseColumnNames="user_id"
                referencedTableName="my_user"
                referencedColumnNames="id"
                constraintName="fk_favourites_user"
        />

        <addForeignKeyConstraint
                baseTableName="user_favourites"
                baseColumnNames="housing_id"
                referencedTableName="housing"
                referencedColumnNames="id"
                constraintName="fk_favourites_housing"
        />
    </changeSet>

</databaseChangeLog>